    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?@react-native|react-(native|community)|@react-navigation|@nozbe/watermelondb)/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
